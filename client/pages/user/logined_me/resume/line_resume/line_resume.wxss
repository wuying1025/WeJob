.basic-photo{
  width:80%;
  height: 300rpx;
  display:flex;
  align-items: center;
  position:relative;
}

.photo-img{
  width:300rpx;
  height:200rpx; 
  flex:1;
  margin-left:50rpx;
}

.camero{
  margin-left: 80rpx;
  height:200rpx;
  flex:1;
}

.set{
  position:absolute;
  bottom:30rpx;
  left:70rpx;
}

input{
  width:85%;
  height: 80rpx;
  border:1rpx solid #ccc;
  margin-left:50rpx;
  margin-top:20rpx;
  margin-bottom:20rpx;  
  border-radius: 5px;
}

.star{
  color:red;
  align-items: center;
}

.desc{
  height:200rpx;
  border:1rpx solid #ccc;
  margin-left:50rpx;
  width: 85%;
  margin-top: 20rpx; 
  margin-bottom: 20rpx;
}

.save{
  width:25%;
  height:80rpx;
  line-height: 80rpx;
  background: #03a9f4;
  color:white;
}

.btn-hover{
  background: #59c0ef;
}

.radio-group{
  margin-left:200rpx;
}

.sex{
  margin-right:150rpx;
