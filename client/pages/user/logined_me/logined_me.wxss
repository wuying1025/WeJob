.wrapper{
  margin:0 1.5rem;
}
.person{
  width:100%;
  height:8rem;
  margin-top: 0.6rem;

}
.person image{
  float: right;
  width:5rem;
  height:5rem;
  margin-top: 80rpx;
  border-radius: 50%;
}
#name{
  font-size: 55rpx;
  float: left;
  margin-top: 100rpx;
}
#look{
  color: gray;
  font-size: 30rpx;
  float: left;
  margin-top: 180rpx;
  margin-left: -100rpx;
}


.list{
  margin-top:1rem;
  display:flex;
}
.list li{
  padding:1rem;
  height:50px;
  float:left;
  flex:1;
  width: 90rpx;
  font-size: 20rpx;
  line-height:30px;
  text-align:center;
  color:#999;
}
.down{
  font-size: 30rpx;
  line-height: 110rpx;
}
.info{
  margin:1rem 1rem;
  
}
.info view{
  border-bottom: 1rpx solid gainsboro;
  height: 100rpx;
  font-size: 1rem;
  color: darkslategray;
}

.modal-box{
  position:fixed;
  width:80%;
  height:30%;
  bottom:0px;
  background:rgba(0,0,0,0.1);
  overflow: hidden;
  }

.modal-body{
  position:relative;
}

.modal-content{
  /* width: 60%; */
  margin:0 10% 0 30%;
  overflow: hidden;
  border-radius: 10rpx;
  }

.modal-content{
  width: 50%;
  height:100px; 
}
.modal-content .fenxiang{
  width: 100%;
  height: 40%;
}