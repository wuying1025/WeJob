.wrapper{
  margin:0 1.5rem;
}
.img{
  width:100%;
  position:relative;
  height:8rem;
  margin-top: 0.6rem;
}
image{
  width:8rem;
  height:8rem;
  margin: 0 auto;
  position:absolute;
  left:50%;
  margin-left:-4rem;
}

.info{
  margin: 2rem;
  width: 100%;
  height: 12rem;
}
.info text{
  font-size: 0.9rem;
  width: 8rem;
  float: left;
}
.info input{
  border :0.01em solid #000 ;
  width: 8rem;
  border-radius: 0.3rem;

  margin-bottom: 1rem;
  float: left;
}
button{
  width: 8rem;
  height: 2rem;

  line-height: 2rem;
}