.container{
   display: flex;
   flex-direction: column;
   align-items: center;
   background-color: #eee;
}
.container .picker{
  flex:1;
  background-color: #FFF;
  margin: 0.5REM;
  width:20rem;
  padding: 0.5rem;
  margin-left: 1.5rem; 
}
.picker .select{
  float: right;
  margin-right: 2rem;
}
.time{
  float: left;
}
.name{
   flex:1;
   background-color: #FFF;
   margin: 0.5REM;
   width:20rem;
   padding: 0.5rem;
   margin-left: 1.5rem; 
}
.name input {
  border:0.02rem solid #000;
  float: right;
  margin-right:1rem; 
  border-radius:0.4rem;
}
.textarea, .textarea2 {
    flex:1;
   background-color: #FFF;
   margin: 0.5REM;
   width:20rem;
   padding: 0.5rem;
   margin-left: 1.5rem; 

}
.textarea textarea,.textarea2 textarea{
  flex:1;
  background-color: #FFF;
  width:18rem;
  border-top: 0.02rem solid #000;
}
#send{
  background-color: #03A9F4;
  flex:1;
  width:20rem;
  text-align: center;
  color: #fff;
  padding: 0.5rem;
}
