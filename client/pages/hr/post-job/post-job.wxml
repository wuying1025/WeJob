 <view class='container'>       
         <picker bindchange="bindPickerChangeCompany" value="{{index}}" range="{{array}}">
    <view class="picker">
     公司 <view class='select'>></view>{{array[index]}}
    </view>
  </picker>
  
          <picker bindchange="bindPickerChangeSalary" value="{{index2}}" range="{{array2}}">
            <view class="picker">
              薪资范围 <view class='select'>></view>{{array2[index2]}}
            </view>
          </picker>
          <picker bindchange="bindPickerChangeCity" value="{{index3}}" range="{{array3}}">
            <view class="picker">
              工作地点 <view class='select'>></view>{{array3[index3]}}
            </view>
          </picker>
          <picker bindchange="bindPickerChangeType" value="{{index4}}" range="{{array4}}">
            <view class="picker">
              招聘类型 <view class='select'>></view>{{array4[index4]}}
            </view>
          </picker>
          <view class='name'>
            <text>职位名称：</text>
            <input type='text' bindinput="bindKeyInputname"></input>  
          </view>
              <picker mode="date" value="{{date}}" start="2015-09-01" end="2020-09-01" bindchange="bindDateChange1">
                <view class="picker">
                  <view class='time'> 招聘信息开始时间:</view>{{ p_date_start}}
                </view>
              </picker>
              <picker mode="date" value="{{date}}" start="2015-09-01" end="2020-09-01" bindchange="bindDateChange2">
                <view class="picker">
                  <view class='time'> 招聘信息结束时间:</view>{{ p_date_end}}
                </view>
              </picker>                    

        <view class='textarea'>
          <text>职位描述</text>
          <textarea  bindtinput="bindKeyInputrequire" value='请填写职位描述：'></textarea>
        </view>
        <view class='textarea2'>
          <text>工作职责</text>
          <textarea bindtinput="bindKeyInputresponsibility" value='请填写工作职责：'></textarea>
        </view>

        <navigator url='../logined/logined'>
        <view  id='send' bindtap='send'> 发布 </view>
        </navigator>
      </view>
  