.container{
   display: flex;
   flex-direction: column;
   align-items: center;
   background-color: #eee;
}

.name{
   flex:1;
   background-color: #FFF;
   margin: 0.5REM;
   width:20rem;
   padding: 0.5rem;
   margin-left: 1.5rem; 
}
.name input {
  border:0.02rem solid #000;
  float: right;
  margin-right:1rem; 
  border-radius:0.4rem;
}


#send{
  background-color: #03A9F4;
  flex:1;
  width:20rem;
  text-align: center;
  color: #fff;
  padding: 0.5rem;
}

.basic{
  margin:20rpx 20rpx auto;
}
.basic-photo{
  width:80%;
  height: 300rpx;
  display:flex;
  align-items: center;
  position:relative;
}

.photo-img{
   width:300rpx;
  height:200rpx;  
  flex:1;
  margin-left:50rpx;
}
